<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />  
    @*<link rel="manifest" href="/manifest.json">*@
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div style="display:none; padding: 5px; text-align:center;" id="install-container">
        <button onclick="pageEvents.tryAddHomeScreen();" class="btn-link no-style">Clique aqui</button>
        e adicione Universe Page na sua home!
    </div>

    <div id="notification-subscribe-section" style="display:none; padding: 5px; text-align:center;">
        <button class="btn-link no-style" onclick="pageEvents.requestPushPermission();">Clique aqui</button> para receber notificações quando coisas incriveis forem compartilhadas
    </div>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">         
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Map">Map Universe</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container ">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; ...far beyond 2020!!!
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/es6-promise/es6-promise.js"></script>
    <script src="~/lib/fetch/fetch.js"></script>
    <script src="~/lib/systemjs/system.js"></script>
    <script src="~/lib/localforage/localforage.min.js"></script>
    <script src="~/lib/localforage/localforage-getitems.js"></script>
    <script src="~/lib/localforage/localforage-setitems.js"></script>
    <script src="~/js/site.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
